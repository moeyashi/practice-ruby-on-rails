<h1>Todos#index</h1>
<%= link_to "New Todo", new_todo_path %>

<ul>
  <% @todos.each do |todo| %>
    <li>
      <strong><%= todo.title %></strong>
      <% if todo.due_at %>
        (Due: <%= todo.due_at.strftime("%Y-%m-%d %H:%M") %>)
      <% end %>
      <%# <%= link_to "Delete", todo_path(todo), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
